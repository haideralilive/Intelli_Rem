<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/finalbg"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.comsats.my_map.addTask"
    android:weightSum="1"
    android:id="@+id/title">


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/latitudetext"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:backgroundTint="#fff"
        android:layout_above="@+id/longitudetext"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/longitudetext"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:backgroundTint="#fff"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/latitudetext" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:id="@+id/add_task_button"
        android:background="@drawable/button"
        android:backgroundTint="#fff"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/task_details_text"
        android:layout_alignStart="@+id/task_details_text" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/task_name_addr"
        android:layout_above="@+id/latitudetext"
        android:layout_alignStart="@+id/latitudetext"
        android:layout_alignEnd="@+id/latitudetext"
        android:backgroundTint="#fff"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:text="Enter Task Name" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/task_details_text"
        android:layout_below="@+id/longitudetext"
        android:layout_alignStart="@+id/longitudetext"
        android:layout_alignEnd="@+id/longitudetext"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:backgroundTint="#fff"
        android:text="Enter Task Details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Add New Task"
        android:id="@+id/textView2"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:textSize="40dp"
        android:fontFamily="Arial"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/task_name_addr" />

</RelativeLayout>
